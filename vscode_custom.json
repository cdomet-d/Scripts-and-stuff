{
  "explorer.confirmDragAndDrop": false,
  "files.autoSave": "afterDelay",
  "explorer.confirmDelete": false,
  "git.confirmSync": false,
  "extensions.ignoreRecommendations": true,
  "editor.insertSpaces": false,
  "git.enableSmartCommit": true,
  "editor.detectIndentation": false,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.autoIndent": "keep",
  "editor.minimap.enabled": false,
  "editor.rulers": [80],
  "cmake.showOptionsMovedNotification": false,
  "window.zoomLevel": 0,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "workbench.colorTheme": "Quiet Light",
  "git.autofetch": true,
  "workbench.colorCustomizations": {
    "focusBorder": "#DFB4AC",
    "contrastBorder": "#83332F",
    "activityBar.background": "#FFFFFF",
    "activityBar.foreground": "#83332F",
    "statusBar.background": "#83332F",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.remoteBackground": "#83332F",
    "statusBar.remoteForeground": "#FFFFFF",

    /* TABS */
    "editorGroupHeader.tabsBackground": "#FFFFFF",
    "tab.activeBackground": "#FFFFFF",
    "tab.activeForeground": "#83332F",
    "tab.inactiveBackground": "#DFB4AC",
    "tab.inactiveForeground": "#FFFFFF",
    "tab.hoverBackground": "#83332F",

    /* EDITOR */
    "editor.background": "#FFFFFF",
    "editor.dropBackground": "#FF0000",
    "editorGutter.background": "#FFFFFF",
    "editorLineNumber.foreground": "#83332F",
    "breadcrumb.foreground": "#FFFFFF",
    "breadcrumb.background": "#83332F",
    "editor.lineHighlightBackground": "#F4E1D9",

    /* SELECTION */
    "editor.selectionBackground": "#DFB4AC",
    "editor.hoverHighlightBackground": "#d49d9649",
    "editor.wordHighlightTextBackground": "#d49d9686",
    "editor.selectionHighlightBackground": "#d49d9686",

    /* SIDEBAR */
    "sideBar.background": "#FFFFFF",
    "sideBar.foreground": "#83332F",
    "sideBarTitle.background": "#FFFFFF",
    "sideBarTitle.foreground": "#83332F",
    "sideBarSectionHeader.background": "#83332F",
    "sideBarSectionHeader.foreground": "#FFFFFF",

    /* LISTS */
    "list.hoverBackground": "#83332F",
    "list.hoverForeground": "#FFFFFF",
    "list.activeSelectionBackground": "#83332F",
    "list.activeSelectionForeground": "#FFFFFF",
    "list.inactiveSelectionBackground": "#DFB4AC",
    "list.inactiveSelectionForeground": "#FFFFFF",
    "list.focusOutline": "#83332F",
    "list.dropBackground": "#F4E1D9",

    /* BUTTONS */
    "button.background": "#83332F",
    "button.foreground": "#FFFFFF",
    "button.hoverBackground": "#B45952",

    /* TERMINAL */
    "terminal.background": "#FFFFFF",
    "terminal.foreground": "#83332F",
    "terminal.selectionBackground": "#DFB4AC",
    "terminalCursor.foreground": "#83332F",

    /* GIT */
    "gitDecoration.modifiedResourceForeground": "#bc4749",
    "gitDecoration.renamedResourceForeground": "#bc4749",
    "gitDecoration.untrackedResourceForeground": "#004b23",
    "gitDecoration.addedResourceForeground": "#004b23",
    "gitDecoration.stageDeletedResourceForeground": "#9E2B25",
    "gitDecoration.deletedResourceForeground": "#9E2B25"
  },

  "editor.tokenColorCustomizations": {
    "comments": 	"#d8a47f",
    "keywords": 	"#ea638c",
    "types":		"#832161",
    "variables":	"#4e148c",
    "strings":		"#d90368",
	"functions":	"#83332F",
	"numbers":		"#d90368",
    "textMateRules": [
      {
        "scope": ["keyword"],
        "settings": {
        "fontStyle": "bold"
        }
      },
      {
        "scope": ["string"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  "workbench.tips.enabled": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.labelFormat": "short",
  "editor.renderWhitespace": "none",
  "githubPullRequests.pullBranch": "never",
  "window.confirmSaveUntitledWorkspace": false,
  "explorer.confirmPasteNative": false,
  "[cpp]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "42header.username": "cdomet-d",
  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
    "*.json": "default"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  }
}
